#include <OVR_CAPI_0_5_0.h>
#include <stdio.h>

void Application()
{
  if (ovr_Initialize(NULL))
    {
      ovrHMD hmd = ovrHmd_Create(0);
      if (hmd)
	{
	  // Get more details about the HMD.
	  ovrSizei resolution = hmd->Resolution;
	  std::cout<< "The resolution is" << resolution<< std::endl;
	  ovrHmd_Destroy(hmd);
	}
      ovr_Shutdown();
    }
}

int main()
{
  Application();
  return 0;
}
	  
